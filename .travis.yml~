# 指定环境
language: node_js

node_js:
- '0.12' //指定使用 node.js 最新的稳定版0.12

# 指定分支
branches:
  only:
  - blog //这个分支应当使用自己的 Dev repo


before_install:
- openssl aes-256-cbc -K $encrypted_a82aff0ff8f8_key -iv $encrypted_a82aff0ff8f8_iv
  -in id_rsa.enc -out id_rsa -d

- chmod 600 ./id_rsa //修改目录权限
- eval $(ssh-agent)//将密钥加入系统
- ssh-add ./id_rsa
- cp ssh_config ~/.ssh/config //修改 git 信息
- git config --global user.name "bb eight"
- git config --global user.email tencrance@gmail.com

# 配置 Hexo
install:
- npm install hexo-cli -g
- npm install
- npm install hexo-generator-feed --save
- npm install hexo-deployer-git --save

# 执行 Hexo 的编译操作
script:
- hexo clean
- hexo g
- hexo d
